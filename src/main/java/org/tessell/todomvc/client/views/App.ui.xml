<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="s" type="org.tessell.todomvc.client.resources.TodoStyle" />
  <ui:style>
    .todoapp {
      width: 480px;
      margin: 0 auto 40px;
      background: white;
      padding: 20px;
      -X-box-shadow: rgba(0, 0, 0, 0.2) 0 5px 6px 0;
      -X-border-bottom-left-radius: 5px;
      -X-border-bottom-right-radius: 5px;
    }
    
    .todoapp h1 {
      font-size: 36px;
      font-weight: bold;
      text-align: center;
      padding: 20px 0 30px 0;
      line-height: 1;
    }
  </ui:style>
  <gwt:HTMLPanel>
    <div class="{style.todoapp}">
      <div>
        <h1>Todos</h1>
      </div>
      <div>
        <gwt:SimplePanel ui:field="createPanel" />
        <gwt:SimplePanel ui:field="listPanel" />
        <gwt:SimplePanel ui:field="statsPanel" />
      </div>
    </div>
    <gwt:SimplePanel ui:field="creditsPanel" />
  </gwt:HTMLPanel>
</ui:UiBinder>